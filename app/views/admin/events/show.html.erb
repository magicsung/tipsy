<h1><%= @event.title %></h1>



<div class="row">
<div class="col-md-8">
  <table class="table table-striped">
  <tr>
    <th>Start_at:</th>
    <td>
      <%= @event.start_date %> |
      <%= @event.start_time.strftime("%H:%M") %>
    </td>
  </tr>
  <tr>
    <th>Due_at:</th>
    <td>
      <%= @event.due_date %> |
      <%= @event.due_time.strftime("%H:%M") %>
    </td>
  </tr>  
  <tr>
    <th>Status:</th>
    <td><%= @event.status %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= raw(@event.description) %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= @event.price %></td>
  </tr>
  <tr>
    <th>Store</th>
    <td><%= @event.store_name %>, <%= @event.store_address %></td>
  </tr>
  <tr>
    <th>Contact</th>
    <td><%= @event.contact %></td>
  </tr>
  <tr>
    <th>Phone</th>
    <td><%= @event.phone %></td>
  </tr>
    
  </table>
</div>

<div class="col-md-4">
  <%= image_tag(@event.edm.url(:medium)) %>
</div>
</div>


<%= link_to 'Back', admin_events_path, :class => "btn btn-default" %>




<h3>NEW STORE</h3>

<%= form_for @store, :url => admin_store_index_path do |n|  %>

<div class="form-group">
  <%= n.label :name, "Name" %>
  <%= n.text_field :name, :class => "form-control", :required => "required" %>
</div>

<div class="form-group">
  <%= n.label :description, "Description" %>
  <%= n.text_area :description, :class => "form-control", :required => "required" %>    
</div>

<%= n.submit "Create", :class => "btn btn-primary" %>
<%= link_to "Cancel", admin_store_index_path, :class => "btn btn-info pull-right" %>

<div class="clearfix"></div>

<% end %>
<div class="page-header">
  <h1>Store console <%= link_to 'New store', new_admin_store_path, :class => "btn btn-default" %></h1>
</div>


<div class="col-md-12">

  <table class="table table-hover table-striped">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>City</th>
      <th>Address</th>
      <th>Description</th>
      <th></th>
    </tr>
      <% Store.all.each do |x| %>
      <tr>
        <td><%= link_to x.name,admin_store_path(x) %></td>
        <td><%= x.phone %></td>
        <td><%= x.location_city %></td>
        <td><%= x.location_address %></td>
        <td>
          <% if x.description.length > 30 %>
            <%= x.description.first(30) %>...
          <% else %>
            <%= x.description %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Edit', edit_admin_store_path(x), :class => "btn btn-default btn-xs" %>
          <%= link_to 'Delete', admin_store_path(x), :method => 'delete', :data => { :confirm => "Are you sure?" }, :class => "btn btn-danger btn-xs" %>
        </td>
        <% end %>
    </tr>
  </table>

  <%= link_to 'New store', new_admin_store_path, :class => "btn btn-default" %>
</div>

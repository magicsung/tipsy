<% arr = Category.all.map{ |x| [x.name, x.id] } %>
<% arr.shift %>

<div class="form-group">
  <%= n.label :category_id, "Category" %>
  <%= n.select :category_id, arr, {} ,:class => "form-control", :required => "required" %>
</div>

<div class="form-group">
  <%= n.label :name, "Name" %>
  <%= n.text_field :name, :class => "form-control", :required => "required" %>
</div>

<div class="form-group">
  <%= n.label :description, "Description" %>
  <%= n.text_area :description, :class => "form-control", :rows => "5"  %>    
</div>

<div class="form-group">
  <%= n.label :phone, "Phone" %>
  <%= n.text_field :phone, :class => "form-control" %>    
</div>

<div class="form-group">
  <%= n.label :location_city, "City" %>
  <%= n.text_field :location_city, :class => "form-control" %>    
</div>

<div class="form-group">
  <%= n.label :location_address, "Location_address" %>
  <%= n.text_field :location_address, :class => "form-control" %>    
</div>

<div class="form-group">
  <%= n.label :hours, "Hours" %>
  <%= n.text_area :hours, :class => "form-control", :rows => "7" %>    
</div>

<% if @store.photo.exists? %>
  <%= image_tag @store.photo.url(:medium) %>
  <br>
    Delete file: <%= check_box_tag "destroy_photo", "1" %>
  <br><br>
<% end %>


<div class="form-group">
  <%= n.file_field :photo %>
</div> 


<div class="store-image">
  <div class="col-md-6 col-md-offset-3">
    <% if @store.photo %>
      <%= image_tag(@store.photo) %>
    <% elsif @store.yelp_image == nil %>
      <%= image_tag('store_default.jpg', :class => 'def-img') %>
    <% else %>
      <%= image_tag(@store.yelp_image) %>
    <% end %>
  </div>
</div>

<div class="col-md-6 col-md-offset-3">

  <table class="table">
  <tr>
    <td>
      <p><%= @store.name %></p>
    </td>
  </tr>
  <tr>
    <td>
      <a href="tel:<%= @store.phone %>"><%= @store.phone %></a>
    </td>
  </tr>
  <tr>
    <td>
      <p><%= @store.location_city %></p>
    </td>
  </tr>
  <tr>
    <td>
      <a href="maps:ll=<%= @store.coordinate_lat %>,<%= @store.coordinate_lon %>&z=15">
        <address><%= @store.location_address %></address>
      </a>
    </td>
  </tr>
  <tr>
    <td>
      <p><%= @store.coordinate_lat %></p>
    </td>
  </tr>
  <tr>
    <td>
      <p><%= @store.coordinate_lon %></p>
    </td>
  </tr>
</table>
</div>




<div class="col-md-6 col-md-offset-3">

  <h3>User comments:</h3>

  <table class="table">
    <% @store.comments.each do |x| %>
      <tr>
        <td>
          <div class="current_score" data-score="<%= x.rating %>"></div>
        </td>
        <td><%= x.content %> <br> <small> by <%= x.user.name %></small></td>
        <td>
        <% if current_user %>
          <% if x.user == current_user %>  
            <div class="pull-right">
              <%= link_to comment_path(x), :method => "delete", :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs" do %>
                <i class="glyphicon glyphicon-remove"></i>
              <% end %>
            </div>
          <% end %>
        <% end %>
        </td> 
      </tr>
    <% end %>
  </table>



  <%= form_for @comment, :url => comments_path do |n|  %>

  <%= n.hidden_field :store_id, :value => @store.id %>

  <div id="rating" class="form-group">
    <%= n.label :rating, "Rating" %>
    <%= n.hidden_field :rating, :class => "form-control", :name => "score" %>
    <div class="star"></div>  
  </div>

  <div class="form-group">
    <%= n.label :content, "Content" %>
    <%= n.text_area :content, :class => "form-control", :required => "required", :rows => 5 %>    
  </div>

  <%= n.submit "Create", :class => "btn btn-primary" %>

  <% end %>

</div>



<div class="empty100px"></div>



